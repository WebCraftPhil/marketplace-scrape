# Etsy Market Research Scraper Environment Variables
# Copy this file to .env and fill in your values

# API Keys (if using external services)
GOOGLE_TRENDS_API_KEY=your_google_trends_api_key_here
AMAZON_API_KEY=your_amazon_api_key_here
SOCIAL_API_KEY=your_social_api_key_here

# Scraping Configuration
SCRAPING_MIN_DELAY=2
SCRAPING_MAX_DELAY=8
SCRAPING_MAX_RETRIES=3
SCRAPING_TIMEOUT=15000

# Browser Configuration
BROWSER_HEADLESS=true
BROWSER_VIEWPORT_WIDTH=1920
BROWSER_VIEWPORT_HEIGHT=1080

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=30
RATE_LIMIT_BURST_SIZE=5

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_ROTATION=daily

# Output Files
OUTPUT_CSV_FILENAME=etsy_market_research.csv
OUTPUT_SUMMARY_FILENAME=opportunity_summary.txt
OUTPUT_LOG_FILENAME=scraping_log.txt
OUTPUT_CHECKPOINT_FILENAME=scraping_checkpoint.json

# Competition Thresholds
COMPETITION_LOW_THRESHOLD=1000
COMPETITION_MODERATE_THRESHOLD=10000
COMPETITION_HIGH_THRESHOLD=100000

# Development
DEBUG_MODE=false
SAVE_SCREENSHOTS=true
VERBOSE_LOGGING=false

# Optional: Proxy Configuration
# PROXY_URL=http://your-proxy-server:port
# PROXY_USERNAME=your_proxy_username
# PROXY_PASSWORD=your_proxy_password
